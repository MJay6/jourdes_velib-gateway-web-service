<Window x:Class="ClientGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="800">
    <Grid>
        <ListBox x:Name="CitySelection" HorizontalAlignment="Left" Height="250" Margin="10,40,0,0" VerticalAlignment="Top" Width="174" SelectionChanged="CitySelection_SelectionChanged"/>
        <Label Content="Cities" HorizontalAlignment="Left" Margin="10,9,0,0" VerticalAlignment="Top" Width="125"/>
        <ListBox x:Name="StationSelection" HorizontalAlignment="Left" Height="250" Margin="207,41,0,0" VerticalAlignment="Top" Width="289" SelectionChanged="StationSelection_SelectionChanged"/>
        <Label Content="Stations" HorizontalAlignment="Left" Margin="207,10,0,0" VerticalAlignment="Top" Width="125"/>
        <Label x:Name="StationName" Content="Stations" HorizontalAlignment="Left" Margin="518,10,0,0" VerticalAlignment="Top" Width="266"/>
        <TextBox x:Name="StationDetails" HorizontalAlignment="Left" Height="250" Margin="518,40,0,0" TextWrapping="Wrap" Text="Aucune station sélectionnée" VerticalAlignment="Top" Width="261" TextChanged="StationDetails_TextChanged"/>

    </Grid>
</Window>
